<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="80dp"
                android:paddingStart="8dp"
                android:paddingTop="40dp"
                android:src="@drawable/arrow" />

            <ImageView
                android:layout_width="192dp"
                android:layout_height="192dp"
                android:layout_gravity="center"
                android:layout_marginStart="55dp"
                android:paddingTop="40dp"
                android:paddingEnd="8dp"
                android:src="@drawable/logo" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/nunitobold"
            android:text="CULTUREWAVE"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/nunito"
            android:text="Selecciona un espacio"
            android:textSize="18sp" />

        <Spinner
            android:layout_width="290dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/borde_edittext"
            android:fontFamily="@font/nunito"
            android:padding="10dp"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/nunito"
            android:text="Nombre del evento"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editTextNombreEvento"
            android:layout_width="290dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/borde_edittext"
            android:fontFamily="@font/nunito"
            android:padding="10dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lbFechaInicio"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/nunito"
            android:text="Fecha inicio evento"
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSeleccionarFechaHoraInicio"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/boton_personalizado"
            android:fontFamily="@font/nunitobold"
            android:text="Seleccionar fecha y hora" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/nunito"
            android:text="Fecha fin evento"
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSeleccionarFechaHoraFin"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/boton_personalizado"
            android:fontFamily="@font/nunitobold"
            android:text="Seleccionar fecha y hora" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/nunito"
            android:text="Descripción del evento"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editTextDescripcionEvento"
            android:layout_width="290dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/borde_edittext"
            android:fontFamily="@font/nunito"
            android:gravity="start|top"
            android:hint="Escribe la descripción del evento aquí..."
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:padding="10dp"
            android:scrollbars="vertical"
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGuardarEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/boton_personalizado"
            android:fontFamily="@font/nunitobold"
            android:text="Guardar evento"
            android:layout_marginBottom="30dp" />

    </LinearLayout>
</ScrollView>