<resources>
    <color name="calendarBackgroundColor">#E4B363</color>
    <color name="calendarTextColor">#121212</color>
    <color name="calendarSelectedDayColor">#AE5C32</color>

    <style name="CustomCalendarStyle">
        <!-- Fondo del calendario -->
        <item name="android:background">@color/calendarBackgroundColor</item>
        <!-- Color de los días -->
        <item name="android:textColor">@color/calendarTextColor</item>
        <!-- Color del texto del día seleccionado -->
        <item name="android:selectedDateVerticalBar">@color/calendarSelectedDayColor</item>
    </style>
</resources>