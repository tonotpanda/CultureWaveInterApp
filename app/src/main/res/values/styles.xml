<resources>
    <!-- Estilo principal para el CalendarView -->
    <style name="CustomCalendarStyle">
        <!-- Fondo del calendario -->
        <item name="android:background">@color/orange</item>
        <!-- Color del texto de la fecha seleccionada -->
        <item name="android:dateTextAppearance">@style/CalendarViewDateCustomText</item>
        <!-- Color del texto de los días de la semana -->
        <item name="android:weekDayTextAppearance">@style/CalendarViewWeekCustomText</item>
    </style>

    <!-- Estilo para el texto de las fechas -->
    <style name="CalendarViewDateCustomText">
        <item name="android:textColor">@drawable/calendar_date_selector</item> <!-- Usa el selector -->
    </style>

    <!-- Estilo para el texto de los días de la semana -->
    <style name="CalendarViewWeekCustomText">
        <item name="android:textColor">@color/black</item> <!-- Color del texto de los días de la semana -->
    </style>
</resources>